<% title "Exhibitions" %>

<table>
  <tr>
    <th>Title</th>
    <th>Site</th>
    <th>City</th>
    <th>Opening</th>
    <th>Closing</th>
    <th>Comment</th>
  </tr>
  <% for exhibition in @exhibitions %>
    <tr>
      <td><%= exhibition.title %></td>
      <td><%= exhibition.site %></td>
      <td><%= exhibition.city %></td>
      <td><%= exhibition.opening %></td>
      <td><%= exhibition.closing %></td>
      <td><%= exhibition.comment %></td>
      <td><%= link_to "Show", exhibition %></td>
      <td><%= link_to "Edit", edit_exhibition_path(exhibition) %></td>
      <td><%= link_to "Destroy", exhibition, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Exhibition", new_exhibition_path %></p>
