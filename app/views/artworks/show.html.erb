<% title "Artwork" %>

<p>
  <strong>Artist:</strong>
  <%= @artwork.artist %>
</p>
<p>
  <strong>Title:</strong>
  <%= @artwork.title %>
</p>
<p>
  <strong>Year:</strong>
  <%= @artwork.year %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag @artwork.image_url() %>
</p>
<p>
  <strong>Description:</strong>
  <%= @artwork.description %>
</p>
<p>
  <strong>Medium:</strong>
  <%= @artwork.medium %>
</p>
<p>
  <strong>Dimensions:</strong>
  <%= @artwork.dimensions %>
</p>

<p>
  <%= link_to "Edit", edit_artwork_path(@artwork) %> |
  <%= link_to "Destroy", @artwork, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", artworks_path %>
</p>